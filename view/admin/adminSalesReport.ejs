        <div class="tm-product-table-container">
            <table class="table table-hover tm-table-small tm-product-table">
                <thead>
                    <tr>
                        <th scope="col">Order ID</th>
                        <th scope="col">User</th>
                        <th scope="col">Order Date</th>
                        <th scope="col">Payment Method</th>
                        <th scope="col">Payment Status</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Price</th>
                        <th scope="col">Total Price</th>
                        <th scope="col">Total Discounted Price</th>
                    </tr>
                </thead>
                <tbody>
                    <% orders.forEach(order => { %>
                        <% order.products.forEach(product => { %>
                            <tr>
                                <td><%= order.orderId %></td>
                          
                                <td><%= order.userId.name %></td> <!-- Assuming you have a way to get the user's name -->
                                <td><%= new Date(order.orderDate).toLocaleDateString() %></td>
                                <td><%= order.PaymentMethod %></td>
                                <td><%= product.status %></td>
                                <td><%= product.quantity %></td>
                                <td><%= product.price - order.offerDiscount %></td>
                                <td>$<%= (product.price * product.quantity).toFixed(2) %></td>
                                <td>
                                    $<%= (product.price * product.quantity - order.offerDiscount - order.couponDiscount).toFixed(2) %>
                                </td>
                            </tr>
                        <% }); %>
                    <% }) %>
                </tbody>
            </table>
        </div>
        <!-- table container -->
