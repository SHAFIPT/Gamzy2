    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Function to handle offer deletion
        async function deleteOffer(button) {
            const offerId = button.getAttribute('data-offer-id');
            
            try {
                const response = await fetch(`/admin/deleteOffer/${offerId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });

                const result = await response.json();

                if (response.ok) {
                    Swal.fire({
                        title: 'Success',
                        text: result.message,
                        icon: 'success',
                        confirmButtonText: 'OK'
                    }).then(() => {
                        // Reload the page or update the UI as needed
                        window.location.reload();
                    });
                } else {
                    Swal.fire({
                        title: 'Error',
                        text: result.message,
                        icon: 'error',
                        confirmButtonText: 'OK'
                    });
                }
            } catch (error) {
                console.error('Error during fetch:', error);
                Swal.fire({
                    title: 'Error',
                    text: 'An error occurred. Please try again.',
                    icon: 'error',
                    confirmButtonText: 'OK'
                });
            }
        }


        async function toggleOfferStatus(offerId, status) {
        try {
            const response = await fetch(`/admin/toggleOfferStatus/${offerId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ active: status })
            });
            const result = await response.json();
            if (result.success) {
                location.reload();
            } else {
                alert('Failed to update offer status');
            }
        } catch (err) {
            console.error(err);
            alert('An error occurred');
        }
    }
    </script>
