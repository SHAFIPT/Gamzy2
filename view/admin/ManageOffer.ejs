<div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 tm-block-col">
    <div class="tm-bg-primary-dark tm-block tm-block-products">
        <div class="tm-product-table-container">
            <table class="table table-hover tm-table-small tm-product-table">
                <thead>
                    <tr>
                        <th scope="col">Offer Name</th>
                        <th scope="col">Offer Code</th>
                        <th scope="col">Activation Date</th>
                        <th scope="col">Expire Date</th>
                        <th scope="col">Offer Type</th>
                        <th scope="col">Discount Amount</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% offers.forEach(offer => { %>
                        <tr>
                            <td><%= offer.name %></td>
                            <td><%= offer._id %></td>
                            <td><%= new Date(offer.activeDate).toLocaleDateString() %></td>
                            <td><%= new Date(offer.expireDate).toLocaleDateString() %></td>
                            <td><%= offer.type %></td>
                            <td><%= offer.discount %>%</td>
                            <td>
                                <a href="/admin/editOffer/<%= offer._id %>" class="btn btn-warning btn-sm">Edit</a>
                                <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#deleteModal<%= offer._id %>">Delete</button>
                                <% if (offer.active) { %>
                                    <button type="button" class="btn btn-secondary btn-sm" onclick="toggleOfferStatus('<%= offer._id %>', false)">Deactivate</button>
                                <% } else { %>
                                    <button type="button" class="btn btn-success btn-sm" onclick="toggleOfferStatus('<%= offer._id %>', true)">Activate</button>
                                <% } %>
                            </td>
                        </tr>

                        <!-- Delete Confirmation Modal -->
                        <div class="modal fade" id="deleteModal<%= offer._id %>" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel<%= offer._id %>" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="deleteModalLabel<%= offer._id %>">Confirm Delete</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to delete the offer "<%= offer.name %>"?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                        <button type="button" class="btn btn-danger" data-offer-id="<%= offer._id %>" onclick="deleteOffer(this)">Delete</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </tbody>
            </table>
        </div>
        <!-- table container -->
        <a href="/admin/addOffer" class="btn btn-primary btn-block text-uppercase mb-3">Add New Offer</a>
    </div>
</div>


