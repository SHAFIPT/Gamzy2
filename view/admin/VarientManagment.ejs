<form action="/admin/add-Variant/<%= product._id %>" method="post">
    <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 tm-block-col">
        <div class="tm-bg-primary-dark tm-block tm-block-products">
            <div class="tm-product-table-container">
                <table class="table table-hover tm-table-small tm-product-table">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Product Name</th>
                            <th scope="col">Images</th>
                            <th scope="col">Color</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (product && product.variants && product.variants.length > 0) { %>
                            <% let idCounter = 1; %>
                            <% product.variants.forEach(function(variant) { %>
                                <tr>
                                    <td><%= idCounter++ %></td>
                                    <td><%= product.productname %></td>
                                    <td>
                                        <% if (variant.images.length > 0) { %>
                                            <% variant.images.slice(0, 4).forEach(function(image, index) { %>
                                                <img src="/uploads/<%= image %>" alt="Product Image <%= index + 1 %>" style="max-width: 50px; display: inline-block; margin: 2px;">
                                            <% }); %>
                                        <% } %>
                                    </td>
                                    <td><%= variant.color %></td>
                                    <td><%= variant.quantity %></td>
                                    <td>
                                        <a href="/admin/edit-Varient/<%= variant._id %>" class="btn btn-sm btn-primary">Edit</a>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="6">No variants available</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
            <!-- table container -->
            <a href="/admin/addVarient?id=<%= product._id %>" class="btn btn-primary btn-block text-uppercase mb-3">Add new Varient</a>
        
        </div>
    </div>
    </form>
    


