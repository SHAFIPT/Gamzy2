<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-3">
                <div class="left-sidebar">
                    <ul class="sidebar-options">
                        <li><a href="/user/myaccount">My Profile</a></li>
                        <li class="active"><a href="/user/wallet">Wallet</a></li>
                        <li><a href="/user/Userorders">Orders</a></li>
                        <li><a href="/user/address">Address</a></li>
                        <li><a href="/user/wishlist">WishList</a></li>
                        <li><a href="/user/LogOut">Signout</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-9 ftco-animate">
                <div class="wallet-section">
                    <h5>Wallet Balance</h5>
                    <p class="wallet-balance">₹<%= wallet.balance %></p>
                    
                    <h5>Transaction History</h5>
                    <% if (wallet.transactions && wallet.transactions.length > 0) { %>
                        <ul class="transaction-history">
                            <% wallet.transactions.reverse().forEach(function(transaction) { %>
                                <li>
                                    <span class="transaction-description"><%= transaction.entry %></span>
                                    <span class="transaction-date"><%= transaction.date.toLocaleDateString() %></span>
                                    <span class="transaction-amount <%= transaction.type === 'credit' ? 'text-success' : 'text-danger' %>">
                                        <%= transaction.type === 'credit' ? '+' : '-' %>₹<%= transaction.amount %>
                                    </span>
                                </li>
                            <% }); %>
                        </ul>
                    <% } else { %>
                        <p>No transactions yet.</p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</section>
