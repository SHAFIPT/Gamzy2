        const stockMessageDiv = document.getElementById('stockMessage');
        const cartForm = document.getElementById('cartForm');

        // Set max attribute for the quantity input field
        quantityInput.max = Math.min(maxQuantity, availableStock);

        // Update stock message based on available stock
        function updateStockMessage(quantity) {
            if (availableStock === 0) {
                stockMessageDiv.textContent = 'Out of stock';
            } else if (quantity > availableStock) {
                stockMessageDiv.textContent = `Only ${availableStock} in stock`;
            } else {
                stockMessageDiv.textContent = '';
            }
        }

        // Initial stock message update
        updateStockMessage(quantityInput.value);

        // Listen for changes in the quantity input field
        quantityInput.addEventListener('input', function() {
            const quantity = parseInt(quantityInput.value, 10);
            if (quantity > maxQuantity) {
                quantityInput.value = maxQuantity;
            }
            updateStockMessage(quantity);
        });

        // Handle form submission
        cartForm.addEventListener('submit', function(event) {
            event.preventDefault();
            const quantity = parseInt(quantityInput.value, 10);

            if (availableStock === 0) {
                stockMessageDiv.textContent = 'Out of stock';
            } else if (quantity > availableStock) {
                stockMessageDiv.textContent = `Only ${availableStock} in stock`;
            } else if (quantity <= availableStock && quantity <= maxQuantity) {
                stockMessageDiv.textContent = 'Added to cart';
                // Add to cart logic here (e.g., send data to the server or update cart UI)
            }
        });
    }); 



        // JavaScript for image zoom
        document.querySelectorAll('.zoom-trigger').forEach(function (img) {
            img.addEventListener('mouseover', function () {
                imageZoom(this); // Pass 'this' (current image) to imageZoom function
            });
        });
    
        function imageZoom(img) {
            img.addEventListener('mousemove', function (e) {
                var rect = img.getBoundingClientRect();
                var x = e.clientX - rect.left; // X position within the image
                var y = e.clientY - rect.top; // Y position within the image
    
                var percentX = (x / img.offsetWidth) * 50;
                var percentY = (y / img.offsetHeight) * 50;
    
                img.style.transformOrigin = percentX + '% ' + percentY + '%';
                img.style.transform = 'scale(2)';
            });
    
            img.addEventListener('mouseleave', function () {
                img.style.transform = 'scale(1)';
            });
        }


    document.addEventListener('DOMContentLoaded', function() {
        const cartForm = document.getElementById('cartForm');
        
        cartForm.addEventListener('submit', async function(event) {
            event.preventDefault(); // Prevent the default form submission

            const productId = document.getElementById('productId').value.trim();
            const variantId = document.getElementById('variantId').value.trim();
            const quantity = document.querySelector('input[name="quantity"]').value.trim();

            const data = {
                productId: productId,
                variantId: variantId,
                quantity: quantity
            };

            try {
                const response = await fetch('/user/addToCart', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });

                const result = await response.json();
                console.log(result.message);
                
                if (response.status === 401) {
                Swal.fire({
                    title: 'Login Required',
                    text: result.error,
                    icon: 'warning',
                    confirmButtonText: 'Login'
                }).then(() => {
                    window.location.href = '/user/login';
                });
            } else if (response.ok) {
                Swal.fire({
                    title: 'Success',
                    text: result.message,
                    icon: 'success',
                    confirmButtonText: 'OK'
                });
            } else {
                Swal.fire({
                    title: 'Error',
                    text: result.error || 'An error occurred. Please try again.',
                    icon: 'error',
                    confirmButtonText: 'OK'
                });
            }
        } catch (error) {
            console.error('Error during fetch:', error);
            Swal.fire({
                title: 'Error',
                text: 'An error occurred. Please try again.',
                icon: 'error',
                confirmButtonText: 'OK'
            });
        }
    });
});



